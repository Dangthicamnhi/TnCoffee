<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52EDE3B2"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity.TTCuaHang">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:text="Thông tin cửa hàng"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="@drawable/ic_border"
        android:text="Trạng thái: Đang hoạt động" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:text="Hoa hồng: 5%"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:text="Note: Chậm 1 tháng"/>
    <Button
        android:id="@+id/btnExit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#ADEAB28D"
        android:text="Exit" />

</LinearLayout>