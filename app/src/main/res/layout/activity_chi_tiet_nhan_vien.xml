<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F2E3"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".Activity.ChiTietNhanVien">


    <EditText
        android:id="@+id/edtMaNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_border"
        android:enabled="false"
        android:hint="Nhập mã"
        android:textColor="#000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtTenNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_border"
        android:hint="Nhập tên"
        android:textColor="#000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtSDTH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_border"
        android:hint="Nhập SDT"
        android:inputType="number"
        android:textColor="#000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtCCCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_border"
        android:hint="Nhập CCCD"
        android:inputType="number"
        android:textColor="#000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_border" />

        <ImageView
            android:id="@+id/ivAnh"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_border" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#EFA289"
                android:drawableLeft="@drawable/ic_add"
                android:text="Thêm" />

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="25sp"
                android:backgroundTint="#EFA289"
                android:drawableLeft="@drawable/ic_delete"
                android:text="Xóa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSua"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#EFA289"
                android:drawableLeft="@drawable/ic_edit"
                android:text="Sửa" />

            <Button
                android:id="@+id/bntLamMoi"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:backgroundTint="#EFA289"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_update"
                android:text="Làm Mới" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
